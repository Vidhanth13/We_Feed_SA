@model IEnumerable<UserAccount> <!-- assuming a list of user accounts is passed to the view -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employer Dashboard</title>

    <style>
        body {
            background-color: #5a6f8d; /* Background color from the image */
            font-family: 'Arial', sans-serif;
            color: white;
        }

        .dashboard-container {
            padding: 20px;
        }

        .dashboard-header {
            text-align: center;
            font-size: 2em;
            margin-bottom: 30px;
            color: #f0f2f5; /* Slightly off-white heading color */
            text-shadow: 0px 0px 5px #fff;
        }

        .search-bar {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .search-bar input {
            padding: 10px;
            width: 300px;
            border-radius: 20px;
            border: none;
            outline: none;
            font-size: 1.1em;
            background-color: #e2e7ec;
            color: #7b7b7b;
        }

        .search-bar button {
            background-color: #193556;
            border: none;
            padding: 10px;
            border-radius: 50%;
            cursor: pointer;
            margin-left: -40px;
        }

        .user-list {
            display: flex;
            flex-direction: column;
            gap: 10px;
            align-items: center;
        }

        .user-item {
            background-color: #d3d8e0;
            width: 60%;
            padding: 15px;
            border-radius: 10px;
            text-align: center;
            color: #000;
            font-size: 1.2em;
            cursor: pointer;
        }

        .user-item:hover {
            background-color: #b0b6bd;
        }

        .bottom-section {
            text-align: center;
            margin-top: 30px;
        }

        .bottom-section button {
            padding: 10px 20px;
            background-color: #193556;
            border: none;
            border-radius: 20px;
            color: white;
            font-size: 1.2em;
            cursor: pointer;
        }

        .logo {
            margin-top: 20px;
        }

        .logo img {
            width: 150px;
        }

        .profile-picture {
            position: absolute;
            top: 20px;
            right: 20px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
        }
    </style>
</head>
<body>

    <div class="dashboard-container">
        <!-- Profile Picture -->
        <img src="/path/to/profile-picture.jpg" class="profile-picture" alt="Profile Picture">
        
        <!-- Header -->
        <h1 class="dashboard-header">EMPLOYER DASHBOARD</h1>

        <!-- Search Bar -->
        <div class="search-bar">
            <input type="text" placeholder="Search..." />
            <button><i class="fas fa-filter"></i></button>
        </div>

        <!-- User List -->
        <div class="user-list">
            @foreach (var user in Model)
            {
                <div class="user-item">
                    @user.Name
                </div>
            }
        </div>

        <!-- Bottom Section -->
        <div class="bottom-section">
            <button>VIEW PAYMENTS</button>
            <div class="logo">
                <img src="/path/to/logo.png" alt="Career Bridge Logo">
                <p>Career Bridge <br> Job Portal</p>
            </div>
        </div>
    </div>

</body>
</html>
