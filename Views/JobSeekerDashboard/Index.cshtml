@model WeFeedSA.Controllers.JobSeekerDashboardController
{
    ViewBag.Title = "Job Seeker Notifications";
}

<!-- Main container with background color -->
<div style="background-color: #6A7D95; padding: 50px; min-height: 100vh;">
    <!-- Header: Job Seeker Notifications -->
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h1 style="color: #ffffff; font-size: 42px; text-align: left;">JOB SEEKER NOTIFICATIONS</h1>
        <img src="~/path_to_user_image.png" alt="User Profile" style="width: 100px; height: 100px; border-radius: 50%;" />
    </div>

    <!-- Alerts Section -->
    <div style="margin-top: 20px;">
        <h2 style="color: #D3D4D9; font-size: 24px;">ALERTS</h2>

        <!-- Notification Alerts (repeated multiple times) -->
        <div style="margin-top: 20px; display: flex; flex-direction: column; gap: 20px;">
            <!-- First Notification -->
            <div style="display: flex; align-items: center; background-color: #E7EBF0; padding: 15px; border-radius: 10px;">
                <img src="~/path_to_warning_icon.png" alt="Alert Icon" style="width: 30px; height: 30px; margin-right: 15px;" />
                <span style="color: #323A45; font-size: 18px;">ADMIN NOTIFIES THAT COMPANY HAS A POTENTIAL INTEREST IN YOU</span>
            </div>

            <!-- Second Notification -->
            <div style="display: flex; align-items: center; background-color: #E7EBF0; padding: 15px; border-radius: 10px;">
                <img src="~/path_to_warning_icon.png" alt="Alert Icon" style="width: 30px; height: 30px; margin-right: 15px;" />
                <span style="color: #323A45; font-size: 18px;">ADMIN NOTIFIES THAT COMPANY HAS A POTENTIAL INTEREST IN YOU</span>
            </div>

            <!-- Third Notification -->
            <div style="display: flex; align-items: center; background-color: #E7EBF0; padding: 15px; border-radius: 10px;">
                <img src="~/path_to_warning_icon.png" alt="Alert Icon" style="width: 30px; height: 30px; margin-right: 15px;" />
                <span style="color: #323A45; font-size: 18px;">ADMIN NOTIFIES THAT COMPANY HAS A POTENTIAL INTEREST IN YOU</span>
            </div>

            <!-- Fourth Notification -->
            <div style="display: flex; align-items: center; background-color: #E7EBF0; padding: 15px; border-radius: 10px;">
                <img src="~/path_to_warning_icon.png" alt="Alert Icon" style="width: 30px; height: 30px; margin-right: 15px;" />
                <span style="color: #323A45; font-size: 18px;">ADMIN NOTIFIES THAT COMPANY HAS A POTENTIAL INTEREST IN YOU</span>
            </div>
        </div>
    </div>

    <!-- Career Bridge Logo at the bottom right -->
    <div style="position: absolute; bottom: 20px; right: 20px;">
        <img src="~/path_to_career_bridge_logo.png" alt="Career Bridge Logo" style="width: 150px;" />
    </div>
</div>
