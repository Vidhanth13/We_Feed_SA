@model WeFeedSA.Controllers.CVController
{
    ViewBag.Title = "Update CV";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update CV</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #627B93; /* Matching background color */
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .form-card {
            background-color: #536D80;
            padding: 40px;
            border-radius: 10px;
            width: 900px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            position: relative;
        }

            .form-card h1 {
                color: white;
                font-size: 36px;
                text-align: left;
                margin-bottom: 20px;
            }

        .form-row {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin-bottom: 20px;
        }

            .form-row input,
            .form-row select,
            .form-row textarea {
                width: 100%;
                padding: 15px;
                border-radius: 10px;
                border: none;
                font-size: 16px;
                color: #A7A7A7;
                background-color: white;
            }

            .form-row select {
                appearance: none;
                background: url('data:image/svg+xml;charset=US-ASCII,<svg xmlns="http://www.w3.org/2000/svg" width="8" height="5"><path fill="black" d="M0 0l4 4 4-4z"/></svg>') no-repeat right 15px center;
                background-color: white;
            }

        .action-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 30px;
        }

            .action-buttons button {
                background-color: #1F3D65;
                color: white;
                border: none;
                padding: 15px;
                border-radius: 10px;
                cursor: pointer;
                font-size: 16px;
                flex: 1;
                margin: 0 10px;
            }

                .action-buttons button:hover {
                    background-color: #2E497A;
                }

        /* Adding the profile image in the top-right corner */
        .profile-img {
            position: absolute;
            top: -40px;
            right: 10px;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
        }

        /* The hand image at the right */
        .hand-img {
            position: absolute;
            right: -80px;
            bottom: -20px;
            width: 200px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="form-card">
            <img src="profile.jpg" class="profile-img" alt="Profile Picture"> <!-- Replace with your image path -->
            <h1>UPDATE CV</h1>

            <form method="post" enctype="multipart/form-data">
                <!-- First row: First Name and Certifications -->
                <div class="form-row">
                    <input type="text" id="FirstName" name="FirstName" placeholder="First Name" required />
                    <input type="text" id="Certifications" name="Certifications" placeholder="Certifications" />
                </div>

                <!-- Second row: Last Name and Employment Status (Dropdown) -->
                <div class="form-row">
                    <input type="text" id="LastName" name="LastName" placeholder="Last Name" required />
                    <select id="EmploymentStatus" name="EmploymentStatus" required>
                        <option value="" disabled selected>Employment Status</option>
                        <option value="employed">Employed</option>
                        <option value="unemployed">Unemployed</option>
                        <option value="student">Student</option>
                    </select>
                </div>

                <!-- Third row: Email Address and Level of Education -->
                <div class="form-row">
                    <input type="email" id="Email" name="Email" placeholder="Email Address" required />
                    <select id="LevelOfEducation" name="LevelOfEducation" required>
                        <option value="" disabled selected>Level of Education</option>
                        <option value="highschool">High School</option>
                        <option value="diploma">Diploma</option>
                        <option value="degree">Degree</option>
                        <option value="postgraduate">Postgraduate</option>
                    </select>
                </div>

                <!-- Fourth row: Phone Number and Tertiary Description -->
                <div class="form-row">
                    <input type="text" id="PhoneNumber" name="PhoneNumber" placeholder="Phone Number" required />
                    <input type="text" id="TertiaryDescription" name="TertiaryDescription" placeholder="If Tertiary, Type a Description" />
                </div>

                <!-- Fifth row: City (Dropdown) and About You -->
                <div class="form-row">
                    <select id="City" name="City" required>
                        <option value="" disabled selected>City</option>
                        <option value="durban">Durban</option>
                        <option value="newyork">New York</option>
                        <option value="london">London</option>
                        <option value="sydney">Sydney</option>
                    </select>
                    <textarea id="AboutYou" name="AboutYou" placeholder="About You" rows="3"></textarea>
                </div>

                <!-- Sixth row: Experience and Skills -->
                <div class="form-row">
                    <input type="text" id="Experience" name="Experience" placeholder="Experience" required />
                    <input type="text" id="Skills" name="Skills" placeholder="Skills" />
                </div>

                <!-- Buttons: Upload and Save -->
                <div class="action-buttons">
                    <button type="submit">Upload Files</button>
                    <button type="submit">Save Changes</button>
                </div>
            </form>

            <!-- Hand image -->
            <img src="hand.png" class="hand-img" alt="Hand Image"> <!-- Replace with your hand image path -->
        </div>
    </div>

</body>
</html>
